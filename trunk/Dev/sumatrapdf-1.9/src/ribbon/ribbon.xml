	<Application.Views>
		<!-- ApplicationModes:
			1 = requires Perm_DiskAccess
			2 = requires Perm_PrinterAccess
			3 = requires Perm_CopySelection
			4 = supports text content
			16 = Debug mode
		-->
		<Ribbon>
			<Ribbon.ApplicationMenu>
				<ApplicationMenu CommandName="tabFileMenu">
					<ApplicationMenu.RecentItems>
						<RecentItems CommandName="cmdMRUList" EnablePinning="false" MaxCount="9" />
					</ApplicationMenu.RecentItems>
					
					<MenuGroup Class="StandardItems">
						<Button CommandName="cmdOpen" ApplicationModes="1" />
						<Button CommandName="cmdClose" ApplicationModes="1" />
						<Button CommandName="cmdSaveAs" ApplicationModes="1" />
						<Button CommandName="cmdPrint" ApplicationModes="2" />
					</MenuGroup>
					
					<MenuGroup Class="StandardItems">
						<Button CommandName="cmdSaveAsLink" ApplicationModes="1" />
						<Button CommandName="cmdSendByEmail" ApplicationModes="1" />
					</MenuGroup>
					
					<MenuGroup Class="StandardItems">
						<Button CommandName="cmdProperties" />
					</MenuGroup>
					
					<MenuGroup Class="StandardItems">
						<Button CommandName="cmdAbout" />
						<Button CommandName="cmdExit" />
					</MenuGroup>
				</ApplicationMenu>
			</Ribbon.ApplicationMenu>
			<Ribbon.Tabs>
				<Tab CommandName="tabStart">
					<Tab.ScalingPolicy>
						<ScalingPolicy>
							<ScalingPolicy.IdealSizes>
								<Scale Group="grpNav" Size="Medium" />
								<Scale Group="grpView" Size="Medium" />
								<!--Scale Group="grpZoom" Size="Medium" /-->
							</ScalingPolicy.IdealSizes>
						</ScalingPolicy>
					</Tab.ScalingPolicy>
					
					<Group CommandName="grpNav" SizeDefinition="SevenButtons">
						<Button CommandName="cmdNavPage" />
						<Button CommandName="cmdNavPrev" />
						<Button CommandName="cmdNavFirst" />
						<Button CommandName="cmdNavBack" />
						<Button CommandName="cmdNavNext" />
						<Button CommandName="cmdNavLast" />
						<Button CommandName="cmdNavForward" />
					</Group>
					
					<Group CommandName="grpView" SizeDefinition="FourButtons">
						<ToggleButton CommandName="cmdViewContinuous" />
						<ToggleButton CommandName="cmdViewSinglePage" />
						<ToggleButton CommandName="cmdViewFacing" />
						<ToggleButton CommandName="cmdViewBook" />
					</Group>
					
					<Group CommandName="grpZoom">
						<ToggleButton CommandName="cmdZoomFitPage" />
						<ToggleButton CommandName="cmdZoomFitWidth" />
						<ComboBox CommandName="cmdZoomCustom" IsEditable="true" IsAutoCompleteEnabled="false" ResizeType="NoResize" />
						<ToggleButton CommandName="cmdZoomFitContent" />
						<ToggleButton CommandName="cmdZoomActualSize" />
					</Group>
				</Tab>
				
				<Tab CommandName="tabMore">
					<Tab.ScalingPolicy>
						<ScalingPolicy>
							<ScalingPolicy.IdealSizes>
								<Scale Group="grpFind" Size="Large" />
								<Scale Group="grpView2" Size="Medium" />
								<Scale Group="grpEdit" Size="Medium" />
								<Scale Group="grpOptions" Size="Medium" />
								<Scale Group="grpDebug" Size="Medium" />
							</ScalingPolicy.IdealSizes>
						</ScalingPolicy>
					</Tab.ScalingPolicy>
					
					<Group CommandName="grpFind" SizeDefinition="OneButton" ApplicationModes="4">
						<Button CommandName="cmdFind" />
					</Group>
					
					<Group CommandName="grpEdit" SizeDefinition="TwoButtons" ApplicationModes="3">
						<Button CommandName="cmdSelectAll" />
						<Button CommandName="cmdCopySelection" />
					</Group>
					
					<Group CommandName="grpView2" SizeDefinition="FourButtons">
						<Button CommandName="cmdViewPresentationMode" />
						<Button CommandName="cmdViewRotateLeft" />
						<Button CommandName="cmdViewRotateRight" />
						<Button CommandName="cmdViewFullscreen" />
					</Group>
					
					<Group CommandName="grpOptions" SizeDefinition="FiveOrSixButtons">
						<Button CommandName="cmdSettings" />
						<Button CommandName="cmdChangeLanguage" />
						<Button CommandName="cmdCheckUpdate" />
						<ToggleButton CommandName="cmdViewBookmarks" />
						<ToggleButton CommandName="cmdViewFavorites" />
					</Group>
					
					<Group CommandName="grpDebug" SizeDefinition="TwoButtons" ApplicationModes="16">
						<ToggleButton CommandName="cmdDebugShowLinks" />
						<ToggleButton CommandName="cmdDebugGdiRenderer" />
					</Group>
				</Tab>
			</Ribbon.Tabs>
			
			<Ribbon.HelpButton>
				<HelpButton CommandName="cmdHelp" />
			</Ribbon.HelpButton>
			
			<Ribbon.QuickAccessToolbar>
				<QuickAccessToolbar CommandName="tabQuickAccess">
					<QuickAccessToolbar.ApplicationDefaults>
						<Button CommandName="cmdOpen" ApplicationDefaults.IsChecked="false" />
						<Button CommandName="cmdSaveAs" ApplicationDefaults.IsChecked="false" />
						<Button CommandName="cmdPrint" />
						<Button CommandName="cmdNavPrev" />
						<Button CommandName="cmdNavNext" />
						<Button CommandName="cmdFind" />
						<Button CommandName="cmdProperties" ApplicationDefaults.IsChecked="false" />
					</QuickAccessToolbar.ApplicationDefaults>
				</QuickAccessToolbar>
			</Ribbon.QuickAccessToolbar>
		</Ribbon>
	</Application.Views>
</Application>
